

<web-app id="4doctors-webapp" version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <display-name>4Doctors</display-name>
    <description>Webapp for patient data management.
        The platform will provide dedicated functions for each user: doctors can consult shared data,
        while patients can access to their own medical records or reserve specific medical examinations.</description>

    <servlet>
        <servlet-name>PatientMedicalExamination</servlet-name>
        <servlet-class>it.unipd.dei.webapp.servlet.PatientExamReservationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PatientMedicalExamination</servlet-name>
        <url-pattern>/create-medical-examination</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/doctors</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>

